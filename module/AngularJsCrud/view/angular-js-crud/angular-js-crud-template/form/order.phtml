<div class="row" data-ng-controller="actionOrderController">
	<form class="form form-horizontal" role="form" name="orderForm" novalidate>
		<div class="form-group">
			<label class="col-sm-2 control-label" for="first_name">Customer</label>
			<div class="col-sm-4">
				<select  class="form-control" id="first_name" name="customer" simpleForm-required
						ng-options="customer.first_name +' '+ customer.last_name for customer in customers track by customer.id"
						ng-model="cust_id" required>
						<option value="">-- Select Customer --</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label" for="first_name">Product</label>
			<div class="col-sm-4">
				<select class="form-control" id="first_name" simpleForm-required
						ng-options="product.product for product in products track by product.id" 
						name="product" ng-model="product_id" required>
						<option value="">-- Select Product --</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label" for="last_name" >Quantity</label>
			<div class="col-sm-2">
				<input type="text" placeholder="Enter Quantity" name="quantity" class="form-control" simpleForm-required simpleForm-number id="last_name" ng-model="quantity" required>
			</div>
			
		</div>
		<div class="form-group">	
			<div class="col-sm-offset-2 col-sm-4 control-label">
				<button id="btn_save" class="btn btn-primary" type="submit" data-ng-click="save()">Save</button>
				<button class="btn btn-default" type="submit" data-ng-click="cancel()">Cancel</button>
			</div>
		</div>
</form>
</div>