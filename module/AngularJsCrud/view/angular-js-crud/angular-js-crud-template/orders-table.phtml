<table class="table table-condensed table-hover table-bordered" data-ng-controller="orderChildController">
	<thead>
		<tr class="active">
			<th>Product</th>
			<th>Price</th>
			<th>Quantity</th>
			<th>Total</th>
		</tr>
	</thead>
	<tbody>
		<tr data-ng-hide="order.orders || order.orders.length > 0">
			<td colspan="4">
				<div class="text-center">No orders found</div>
			</td>
		</tr>
		<tr data-ng-repeat="c_order in order.orders">
			<td>{{c_order.product}}</td>
			<td>{{c_order.price | currency}}</td>
			<td>{{c_order.quantity}}</td>
			<td>{{c_order.total | currency}}</td>
		</tr>
		<tr class="success">
			<td colspan="3"></td>
			<td>{{total | currency}}</td>
		</tr>
	</tbody>
</table>