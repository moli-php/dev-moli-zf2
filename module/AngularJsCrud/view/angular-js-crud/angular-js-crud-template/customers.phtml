<h2>Customers</h2>
<table class="table table-condensed table-striped table-hover">
	<colgroup>
		<col width="5%">
		<col width="15%">
		<col width="15%">
		<col width="30%">
		<col width="15%">
		<col width="20%">
	<thead>
		<tr>
			<th>#</th>
			<th>Given Name</th>
			<th>Surname</th>
			<th>Address</th>
			<th>Contact Numbers</th>
			<th>Email</th>
		</tr>
	</thead>
	<tbody id="customer_table">
		<tr data-ng-repeat="customer in customers" data-ng-click="custClick(customer.id)">
			<td>{{$index+1}}</td>
			<td>{{customer.first_name}}</td>
			<td>{{customer.last_name}}</td>
			<td>{{customer.address}}</td>
			<td>{{customer.contact_no}}</td>
			<td>{{customer.email}}</td>
		</tr>
	</tbody>

</table>